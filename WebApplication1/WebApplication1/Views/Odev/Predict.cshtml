@model WebApplication1.MLModel.ModelInput
@{
    ViewData["Title"] = "Prediction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Home Team Corner Prediction</h1>




@if(ViewBag.Result != null)
{
      <div>
          <h4 class="text-center">
              Result : @ViewBag.Result.Score
          </h4>
      </div>

  <hr>
}<br>

 <div class="row">
    <div class="col-md-12">
        <img class="w-50 float-right" src="~/foto/logo.png" alt="">
        <form asp-action="Predict">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          

                <div class="form-group col-md-4">
                       <div class="form-group row">
                           <label asp-for="HomeTeam" class="control-label">Home Team</label>
                    <input asp-for="HomeTeam" class="form-control" />
                    <span asp-validation-for="HomeTeam" class="text-danger"></span>
                </div>
               
                     <div class="form-group row">
                         <label asp-for="AwayTeam" class="control-label">Away Team</label>
                    <input asp-for="AwayTeam" class="form-control" />
                    <span asp-validation-for="AwayTeam" class="text-danger"></span>
                </div>
             
                 <div class="form-group row">
               
                
                     <label asp-for="HomeShot" class="control-label">Home Shot</label>
                    <input asp-for="HomeShot" class="form-control" />
                    <span asp-validation-for="HomeShot" class="text-danger"></span>
                </div>
               
                 <div class="form-group row">
                 
                     <label asp-for="AwayShot" class="control-label">AwayShot</label>
                    <input asp-for="AwayShot" class="form-control" />
                    <span asp-validation-for="AwayShot" class="text-danger"></span>
                </div>
               
                 <div class="form-group row">
              
                     <label asp-for="AwayCorner" class="control-label">Away Corner</label>
                    <input asp-for="AwayCorner" class="form-control" />
                    <span asp-validation-for="AwayCorner" class="text-danger"></span>
                </div>
                
               <br>
                <div class="form-group text-right">
                    <input type="submit" value="Prediction" class="btn btn-dark" />
                
                </div>
            </div>
        </form>
        
    </div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
